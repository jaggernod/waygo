<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:card_view="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="200dp"
              android:paddingLeft="8dp"
              android:paddingBottom="4dp"
              android:paddingTop="4dp"
              android:paddingRight="8dp">

    <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            card_view:cardElevation="2sp"
            card_view:cardUseCompatPadding="true"
            card_view:cardCornerRadius="8dp">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical">

            <TextView
                    android:id="@+id/flight_locations"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:text="Madrid - Bogota"
                    android:textColor="@android:color/black"/>
            <TextView
                    android:id="@+id/flight_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="15:30 - 07:00"
                    android:textColor="@android:color/black"
                    android:layout_below="@+id/flight_locations"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"/>
            <TextView
                    android:id="@+id/flight_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Departing Gate B29 - Landing Gate A1"
                    android:textColor="@android:color/darker_gray"
                    android:layout_below="@+id/flight_time"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" android:textIsSelectable="true"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>